<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".work4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Grade Point"
            android:textSize="23dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="#4CAF50"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B5E8B7"
            android:hint="Enter your Physics number"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:padding="7dp"
            android:textColor="#4CAF50"
            android:layout_marginTop="20dp"
            android:id="@+id/et_sud1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B5E8B7"
            android:hint="Enter your Chemistry number"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:padding="7dp"
            android:textColor="#4CAF50"
            android:layout_marginTop="10dp"
            android:id="@+id/et_sud2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B5E8B7"
            android:hint="Enter your Biology number"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:padding="7dp"
            android:textColor="#4CAF50"
            android:layout_marginTop="10dp"
            android:id="@+id/et_sud3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B5E8B7"
            android:hint="Enter your Mathematics number"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:padding="7dp"
            android:textColor="#4CAF50"
            android:layout_marginTop="10dp"
            android:id="@+id/et_sud4"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B5E8B7"
            android:hint="Enter your ICT number"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:padding="7dp"
            android:textColor="#4CAF50"
            android:layout_marginTop="10dp"
            android:id="@+id/et_sud5"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="processing"
            android:textSize="20dp"
            android:id="@+id/btn4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textSize="25dp"
            android:id="@+id/tv4"
            android:text=""
            android:textColor="#4CAF50"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>